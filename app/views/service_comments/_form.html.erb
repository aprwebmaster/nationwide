<% if current_user %>
   <h4>Add a Service Comment:</h4>
   	<div class="col-md-8">
 <%= form_for [account, service_comment] do |f| %>
 	<div class="form-group">
   <%= f.label "Store" %>
   <%= f.text_field :store, class: 'form-control', placeholder: "Enter Store Name" %>
    </div>
    <div class="form-group">
    <%= f.label "Date" %>
    <%= f.text_field :date, class: 'form-control', placeholder: "Enter Today's Date"  %>
	</div>
    <div class="form-group">
    <%= f.label "Contacted Manager" %>
    <%= f.text_field :contacted_manager, class: 'form-control', placeholder: "Enter Contacted Manager's Name"  %>
    </div>
    <div class="form-group">
    <%= f.label "Is this person the Store Manager? Check box if Yes." %>
    <%= f.check_box :store_manager, class: 'form-control' %>
	</div>
    <div class="form-group">
    <%= f.label "Please enter your Comment" %>
    <%= f.text_area :body, class: 'form-control', placeholder: "Please enter a miniumum of five characters"  %>
	</div> 
	
 	<div class="form-group">
   <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
</div>
 	<% end %>

 <% end %>