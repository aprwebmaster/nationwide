<% if service_record.store %>
   <div>
    <% if policy(Account.new).destroy? %>
   	<%= link_to "Delete Service Record", [@store, service_record], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this service record?' } %>
    <% end %>
   	 <h5> Store: <%= service_record.store_name %></h5>
      <p><h5>Service Record Date:</h5> <%= service_record.date %></p>
      <p><h5>Manager:</h5> <%= service_record.manager %></p>
      <p><h5>Subcontractor:</h5> <%= service_record.subcontractor %></p>
      <p><h5>Service Type:</h5> <%= service_record.service_type %></p>
      <p><h5>Frequency:</h5> <%= service_record.frequency %></p>
      <p><h5>Service Price - Contractor/h5> <%= service_record.sp_sub %></p>
      <p><h5>Service Price - Corporate</h5> <%= service_record.sp_corp %></p>
      <p><h5>Square Footage & Floor Type</h5> <%= service_record.square_footage %></p>
      <p><h5>Record Text:</h5> <%= service_record.body %></p>
      <p><h5> Report in?</h5> <% service_record.report_in ? "yes" : "no" %> </p>
     <small>
       <em><%= service_record.store.name || service_record.store.email %> </em>
     </small>
   <% end %>
   <hr/>
 </div>