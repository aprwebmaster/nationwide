<% if current_user %>

<h1>Add a  Service Record </h1>

	<div class="col-md-8">
    <%= form_for [account, service_record] do |f| %>
 	<div class="form-group">
   <%= f.label "Store" %>
   <%= f.text_field :store, class: 'form-control', placeholder: "Enter Store Name" %>
    </div>
    <div class="form-group">
    <%= f.label "Date" %>
    <%= f.text_field :date, class: 'form-control', placeholder: "Enter Date" %>
	</div>
    <div class="form-group">
    <%= f.label "Manager" %>
    <%= f.text_field :manager, class: 'form-control', placeholder: "Enter Manager's Name"%>
    </div>
    <div class="form-group">
    <%= f.label "Service Type" %>
    <%= f.text_field :service_type, class: 'form-control', placeholder: "Enter Service Type" %>
	</div>
	<div class="form-group">
    <%= f.label "Report In?" %>
    <%= f.check_box :report_in, class: 'form-control' %>
	</div>
    <div class="form-group">
    <%= f.label "Please enter the text for your service record." %>
    <%= f.text_area :body, class: 'form-control' %>
	</div> 
	
 	<div class="form-group">
   <%= f.submit "Save", class: 'btn btn-success' %>
 	<% end %>
	</div>
<% end %>