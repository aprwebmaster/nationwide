
<div class="row">
<div>
<h2> Account Name: <%= @account.name %></h2>
<% if policy(Account.new).create? %>
<%= link_to "Edit", edit_account_path(@account), class: 'btn btn-success' %>
 <%= link_to "Delete Account", @account, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this account?' } %>
<% end %> 
