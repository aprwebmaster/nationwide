<h3>Edit personal information</h3>
    <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter Name", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: 'form-control', placeholder: "Enter Email Address", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.label :role %>
        <%= f.text_field :role, class: 'form-control', placeholder: "Enter Role (admin, staff, or subcontractor)", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.submit "Update", class: 'btn btn-success' %>
      </div>
    <% end %>